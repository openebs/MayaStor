    "mbus": "./mbus.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openebs/Mayastor.git",
    "directory": "csi/moac"
  },
  "scripts": {
    "prepare": "./bundle_protos.sh",
    "clean": "rm -f replica.js pool.js nexus.js",
