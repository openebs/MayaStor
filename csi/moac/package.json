    "winston": "^3.2.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "dirty-chai": "^2.0.1",
    "mocha": "^7.1.1",
    "semistandard": "^14.2.0",
    "sinon": "^9.0.1",
    "typescript": "^3.9.3",
    "wtfnode": "^0.8.1"
